{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "docs/_site": true
  },
  "spellright.groupDictionaries": false,
  "spellright.language": [
    "en-GB"
  ],
  "spellright.documentTypes": [
    "markdown",
    "latex",
    "plaintext",
    "javascript"
  ],
  "json.schemas": [
    {
      "fileMatch": [
        "discover.json"
      ],
      "url": "/siren.schema.json"
    },
    {
      "fileMatch": [
        "docs/_config.yaml"
      ],
      "url": "jekyll"
    }
  ]
}
